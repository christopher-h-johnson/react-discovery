{
  "atom": {
    "rewriteTsconfig": false
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/_test_/**/*.json"
  ],
  "references": [
    {
      "path": "packages/react-discovery-components"
    },
    {
      "path": "packages/react-discovery-configuration"
    },
    {
      "path": "packages/react-discovery-core"
    },
    {
      "path": "packages/react-discovery-elasticsearch-app"
    },
    {
      "path": "packages/react-discovery-i18n"
    },
    {
      "path": "packages/react-discovery-iiif"
    },
    {
      "path": "packages/react-discovery-views"
    },
    {
      "path": "packages/react-discovery-workspace"
    }
  ]
}
