{
  "compilerOptions": {
    "baseUrl": "src",
    "composite": true,
    "paths": { "*": ["@types/*"] },
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedParameters":true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib":[
      "es5", "es2015", "es2017", "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ]
  },

  "include":[
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/_test_/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
